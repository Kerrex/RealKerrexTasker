<h1>Permissions list</h1>

<p>
  {{link-to "New Permission" "permissions.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Description
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |permission|}}
        <tr>
          <td>
            {{permission.name}}
          </td>
          <td>
            {{permission.description}}
          </td>
          <td>
            {{link-to "Edit" "permissions.edit" permission}}
          </td>
          <td>
            {{link-to "Show" "permissions.show" permission}}
          </td>
          <td>
            <a href="#" {{action "remove" permission}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Permissions found
  </p>
{{/if}}
